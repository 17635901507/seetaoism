<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PersonalFragment">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:background="@color/black"
        motion:layout_constraintDimensionRatio="w,1:1"
        motion:layout_constraintEnd_toEndOf="parent"
        motion:layout_constraintHorizontal_bias="0.0"
        motion:layout_constraintStart_toStartOf="parent"
        motion:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_collect"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        motion:layout_constraintStart_toStartOf="parent"
        motion:layout_constraintTop_toBottomOf="@+id/view" />

    <View
        android:id="@+id/v_message"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:background="@color/white"
        motion:layout_constraintHorizontal_bias="0.0"
        motion:layout_constraintLeft_toLeftOf="parent"
        motion:layout_constraintRight_toRightOf="parent"
        motion:layout_constraintTop_toBottomOf="@+id/v_collect" />

    <View
        android:id="@+id/v_setting"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        motion:layout_constraintStart_toStartOf="parent"
        motion:layout_constraintTop_toBottomOf="@+id/v_message" />

    <TextView
        android:id="@+id/tv_collect"
        android:layout_width="69dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="我的收藏"
        motion:layout_constraintBottom_toBottomOf="@+id/imageView5"
        motion:layout_constraintStart_toEndOf="@+id/imageView5"
        motion:layout_constraintTop_toTopOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="93dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/vector_password"
        motion:layout_constraintEnd_toEndOf="parent"
        motion:layout_constraintStart_toStartOf="parent"
        motion:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="未登录"
        android:textColor="@color/white"
        android:textSize="20sp"
        motion:layout_constraintEnd_toEndOf="@+id/iv_head"
        motion:layout_constraintStart_toStartOf="@+id/iv_head"
        motion:layout_constraintTop_toBottomOf="@+id/iv_head" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        motion:barrierDirection="top"
        motion:constraint_referenced_ids="view"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="348dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="22dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/vector_absorbed"
        motion:layout_constraintBottom_toBottomOf="@+id/v_collect"
        motion:layout_constraintEnd_toStartOf="@+id/tv_message"
        motion:layout_constraintStart_toStartOf="@+id/v_collect"
        motion:layout_constraintTop_toTopOf="@+id/v_collect" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="22dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/vector_notice"
        motion:layout_constraintBottom_toBottomOf="@+id/v_message"
        motion:layout_constraintStart_toStartOf="@+id/v_message"
        motion:layout_constraintTop_toTopOf="@+id/v_message" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:text="我的消息"
        motion:layout_constraintBottom_toBottomOf="@+id/imageView6"
        motion:layout_constraintStart_toEndOf="@+id/imageView6"
        motion:layout_constraintTop_toTopOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/vector_seting"
        motion:layout_constraintBottom_toBottomOf="@+id/v_setting"
        motion:layout_constraintStart_toStartOf="@+id/v_setting"
        motion:layout_constraintTop_toTopOf="@+id/v_setting" />

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="36dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="设置"
        motion:layout_constraintBottom_toBottomOf="@+id/imageView7"
        motion:layout_constraintStart_toEndOf="@+id/imageView7"
        motion:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="17dp"
        android:layout_height="14dp"
        android:layout_marginEnd="8dp"
        android:src="@mipmap/right"
        motion:layout_constraintBottom_toBottomOf="@+id/v_setting"
        motion:layout_constraintEnd_toEndOf="@+id/v_setting"
        motion:layout_constraintTop_toTopOf="@+id/v_setting" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@mipmap/right"
        motion:layout_constraintBottom_toBottomOf="@+id/v_collect"
        motion:layout_constraintEnd_toEndOf="@+id/v_collect"
        motion:layout_constraintTop_toTopOf="@+id/v_collect" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@mipmap/right"
        motion:layout_constraintBottom_toBottomOf="@+id/v_message"
        motion:layout_constraintEnd_toEndOf="@+id/v_message"
        motion:layout_constraintTop_toTopOf="@+id/v_message" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/login_button_rounder_bg_selector"
        android:text="登录"
        android:textColor="@color/white"
        motion:layout_constraintEnd_toEndOf="parent"
        motion:layout_constraintHorizontal_bias="0.508"
        motion:layout_constraintStart_toStartOf="parent"
        motion:layout_constraintTop_toBottomOf="@+id/v_setting" />

    <View
        android:id="@+id/view2"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/black"
        motion:layout_constraintEnd_toEndOf="parent"
        motion:layout_constraintStart_toStartOf="parent"
        motion:layout_constraintTop_toTopOf="@+id/v_message" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@color/gray_5"
        motion:layout_constraintBottom_toBottomOf="@id/v_message"
        motion:layout_constraintBottom_toTopOf="@+id/v_setting"
        motion:layout_constraintEnd_toEndOf="parent"
        motion:layout_constraintTop_toBottomOf="@+id/v_message" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@color/gray_5"
        motion:layout_constraintEnd_toEndOf="parent"
        motion:layout_constraintTop_toBottomOf="@+id/v_setting" />


</android.support.constraint.ConstraintLayout>